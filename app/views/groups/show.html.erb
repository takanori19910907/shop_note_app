<ul class="group_info">
  <li><h2>グループ名:<%= @group.name %></h2></li>
  <% if @group.image.present? %>
    <li><img src= "<%= @group.image %>" class="image_icon"></li>
  <% else %>
    <li><img src= "/default_group_icon.png" class="_show_group_icon"></li>
  <% end %>
</ul>

<p>所属メンバー名</p>
  <% @members.each do |member| %>
    <ul class="group_members_list">
      <li><%= member.user.name %></li>
      <% if member.user.image.present? %>
        <li><img src= "<%= member.user.image %>" class="image_icon"></li>
      <% else %>
        <li><img src= "/default_user_icon.jpg" class="image_icon"></li>
      <% end %>
    </ul>
  <% end %>

<p>グループプロフィール</p>
  <div class="group_profile">
    <%= @group.profile %>
  </div>

<p><%= link_to "グループ情報編集",edit_group_path(@group.id) %></p>

<div class="form_body">

  <%= form_with url: search_index_path, method: :get, local:true do |f| %>
      <%= f.hidden_field :group_id, :value => @group.id %>
      <%= render "shared/search_form", f: f %>
  <% end %>
</div>
