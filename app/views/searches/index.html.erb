<p>検索結果一覧</p>

<% if @search_users.present? %>

  <% if @group.blank? %>

    <%= render "shared/search_result(from_users)" %>

  <% else %>

    <%= render "shared/search_result(from_groups)" %>

  <% end %>

<% else %>

<p>指定されたユーザーは存在しません</p>

<% end %>

<div class="form_body">
  <%= form_with url: search_index_path, method: :get, local:true do |f| %>
  <%= render "shared/search_form", f: f %>
  <% end %>
</div>
