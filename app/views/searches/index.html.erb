<p>検索結果一覧</p>

<% if @search_users.present? %>

      <% if @group.blank? %>

        <%= render 'shared/search_result(from_users)' %>

      <% else %>

        <%= render 'shared/search_result(from_groups)' %>

      <% end %>

<% else %>

<p>指定されたユーザーは存在しません</p>


<% end %>

<div class="form_body" id="searches_form">
  <div class="form_title">招待したいユーザーを検索</div>

  <%= form_with url: search_index_path, method: :get, local: true do |f| %>
    <%= f.text_field :name,class:'form-control search_form', placeholder: "ユーザー名を入力" %>
    <%= f.submit "検索", class: "btn btn-light" %>
  <% end %>
</div>
