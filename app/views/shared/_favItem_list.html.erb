  <% @favorite_item_groups.each do |item_group| %>
    <p>-<%= item_group[:idx] %>-</p>
    <% item_group[:items].each do |item| %>

      <%= f.label :item_ids do %>
      <label>
      <%= f.check_box :item_ids, {type: 'checkbox', class: 'checkbox-select', id: "checkbox#{item}", multiple: true,include_hidden: false}, item.id %>
      <%= item.name %>
      </label>
      <% end %>
    <% end %>
  <% end %>

  <% if params[:group_id].present? %>

    <%= f.hidden_field :group_id, :value => params[:group_id] %>

  <% end %>
